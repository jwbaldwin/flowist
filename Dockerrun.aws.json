{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
        "api",
        "frontend"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx",
          "readOnly": true
        }
      ]
    },
    {
      "name": "api",
      "image": "jwbaldwin/flowist:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 8080
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        }
      ]
    },
    {
      "name": "frontend",
      "image": "jwbaldwin/flowist-frontend:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "containerPort": 3000
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx"
      }
    }
  ]
}
